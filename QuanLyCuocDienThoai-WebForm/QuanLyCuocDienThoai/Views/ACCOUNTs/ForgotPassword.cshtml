
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Login_RegisterLayout.cshtml";
}

<h2 style="text-align-last:center">Quên mật khẩu</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <hr />
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }
    <div class="form-group" style="padding-left: 256px">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-5">
            @Html.TextBox("Email", "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group" style="padding-left: 256px">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Gửi" class="btn btn-success" />
        </div>
    </div>
</div>
}

