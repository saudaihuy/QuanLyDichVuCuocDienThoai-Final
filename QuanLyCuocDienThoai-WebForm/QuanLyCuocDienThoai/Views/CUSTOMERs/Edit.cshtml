@model QuanLyDienThoaiEntity.Models.CUSTOMER
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="margin-top: 23px; font-size: 40px; color: #4800ff">Thông tin khách hàng</h4>
                <hr />
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.SuccessMessage
                    </div>
                }
                @if (ViewBag.FailMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.FailMessage
                    </div>
                }
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_CUSTOMER)
                <div class="form-group">
                    <label class="control-label col-md-2">HỌ VÀ TÊN <span style="color: #ff0000">*</span></label>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">SỐ CHỨNG MINH <span style="color: #ff0000">*</span></label>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.IDENTIFY, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IDENTIFY, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">CÔNG VIỆC <span style="color: #ff0000">*</span></label>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.JOB, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.JOB, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">CHỨC VỤ <span style="color: #ff0000">*</span></label>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.POSITION, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.POSITION, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">ĐỊA CHỈ <span style="color: #ff0000">*</span></label>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-5">
                        <label class="checkbox-inline">
                            <input type="checkbox" onclick="enableBtn()">Tôi cam kết thông tin đã khai là đúng
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <input id="btnDisabled" type="submit" value="Sửa thông tin" class="btn btn-success" disabled />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
