@model IEnumerable<QuanLyDienThoaiEntity.Models.DETAIL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                <h4 style="margin-top: 23px; font-size: 40px; color: #4800ff">Tra cước</h4>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form class="form-horizontal">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số điện thoại</label>
                            <div class="col-sm-3">
                                @Html.DropDownList("simID", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Từ ngày </label>
                            <div class="col-sm-3">
                                @Html.Editor("StartDate", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Đến ngày</label>
                            <div class="col-sm-3">
                                @Html.Editor("EndDate", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-success">Tra cước</button>
                            </div>
                        </div>
                    }
                </form>
            </div>

            <table class="table table-striped table-bordered table-hover">
                <tr class="info">
                    <th>
                        Thời gian bắt đầu
                    </th>
                    <th>
                        Thời gian kết thúc
                    </th>
                    <th>
                        Số phút 7h-23h
                    </th>
                    <th>
                        Số phút 23-7h
                    </th>
                    <th>
                        Cước phí
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TIME_START)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIME_STOP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MINUTE_AFTER7)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MINUTE_AFTER23)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FARE)
                </td>
            </tr>
}
            </table>
        </div>
    </div>
    </div>
